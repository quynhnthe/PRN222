<Window x:Class="Lab1_FetchDataHttpClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab1_FetchDataHttpClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtURL" HorizontalAlignment="Center" Height="26" Margin="0,32,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="800"/>
        <Label Content="URL" HorizontalAlignment="Center" Height="27" VerticalAlignment="Top" Width="800"/>
        <Label Content="HTML Source" HorizontalAlignment="Center" Height="27" VerticalAlignment="Top" Width="800" Margin="0,63,0,0"/>
        <TextBox Name ="txtContent" HorizontalAlignment="Center" Height="228" Margin="0,95,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="800"/>
        <Button Content="View HTML" HorizontalAlignment="Left" Height="26" Margin="65,368,0,0" VerticalAlignment="Top" Width="95" Click="ButtonViewHTML_Click"/>
        <Button Content="Clear" HorizontalAlignment="Left" Height="26" Margin="276,368,0,0" VerticalAlignment="Top" Width="95" Click="ButtonClear_Click"/>
        <Button Content="Close" HorizontalAlignment="Left" Height="26" Margin="528,368,0,0" VerticalAlignment="Top" Width="95" Click="ButtonClose_Click"/>


    </Grid>
</Window>
